@model Dealer360CodeProject.Models.Show
    <form method="post" asp-action="Update" asp-controller="Watchlist">
        <div id="updateModal" class="modal fade" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Your Show</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Your Interest Level:</label>
                            <input type="range" class="form-control-range" name="Interest" min="1" max="10" value="@Model.Rating" />
                        </div>
                        <div class="form-group">
                            <label>Genre</label>
                            <input type="text" name="Genre" class="form-control" value="@Model.Genre" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="id" value="@Model.ID" />
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>